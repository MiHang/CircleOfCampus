<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 定义当button 处于pressed 状态时的形态-->
    <item android:state_pressed="true">
        <shape>
            <!-- 边框 -->
            <stroke android:width="1dp" android:color="#ffffff"/>
            <!-- 填充 -->
            <solid android:color="#fe9843"/>
            <corners android:radius="50dp" />
            <padding
                android:left="20dp"
                android:top="5dp"
                android:bottom="5dp"
                android:right="20dp" />
        </shape>
    </item>

    <!-- 定义当button 处于默认状态时的形态-->
    <item>
        <shape>
            <!-- 边框 -->
            <stroke android:width="1dp" android:color="#ffffff"/>
            <corners android:radius="50dp" />
            <padding
                android:left="20dp"
                android:top="5dp"
                android:bottom="5dp"
                android:right="20dp" />
        </shape>
    </item>

</selector>