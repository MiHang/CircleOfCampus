<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eaeaea"
        android:orientation="vertical">

        <team.circleofcampus.view.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/user_info_textSize"
            android:layout_marginTop="@dimen/user_info_textSize"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Icon"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:padding="@dimen/min_padding"
                android:src="@drawable/icon" />

            <team.circleofcampus.view.MyLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignRight="@id/Icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NickName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:text="小明" />

                <TextView
                    android:id="@+id/UserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="昵称:万达" />
            </team.circleofcampus.view.MyLinearLayout>

        </team.circleofcampus.view.MyLinearLayout>

        <team.circleofcampus.view.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mine_column_height">

            <team.circleofcampus.view.FontTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="用户ID："
                android:textColor="@color/black"
                android:textSize="@dimen/user_info_textSize" />

            <team.circleofcampus.view.FontTextView
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="暂无数据"
                android:textSize="@dimen/user_info_textSize" />
        </team.circleofcampus.view.MyLinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="@dimen/divide_line_height"
            android:background="@color/divide_color" />

        <team.circleofcampus.view.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mine_column_height">

            <team.circleofcampus.view.FontTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="性别："
                android:textColor="@color/black"
                android:textSize="@dimen/user_info_textSize" />

            <team.circleofcampus.view.FontTextView
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="暂无数据"
                android:textSize="@dimen/user_info_textSize" />
        </team.circleofcampus.view.MyLinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="@dimen/divide_line_height"
            android:background="@color/divide_color" />

        <team.circleofcampus.view.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mine_column_height">

            <team.circleofcampus.view.FontTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="学校："
                android:textColor="@color/black"
                android:textSize="@dimen/user_info_textSize" />

            <team.circleofcampus.view.FontTextView
                android:id="@+id/college"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="暂无数据"
                android:textSize="@dimen/user_info_textSize" />
        </team.circleofcampus.view.MyLinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="@dimen/divide_line_height"
            android:background="@color/divide_color" />

        <team.circleofcampus.view.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mine_column_height">

            <team.circleofcampus.view.FontTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="院系："
                android:textColor="@color/black"
                android:textSize="@dimen/user_info_textSize" />

            <team.circleofcampus.view.FontTextView
                android:id="@+id/department"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="暂无数据"
                android:textSize="@dimen/user_info_textSize" />
        </team.circleofcampus.view.MyLinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="@dimen/divide_line_height"
            android:background="@color/divide_color" />

        <Button
            android:id="@+id/send_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/middle_padding"
            android:background="@drawable/btn_bg"
            android:text="发送消息"
            android:textColor="@color/white"
            android:textSize="@dimen/user_info_textSize" />
    </LinearLayout>

</LinearLayout>

