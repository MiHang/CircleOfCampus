<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:clipToPadding="true"
    android:background="@drawable/bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/search_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/mine_bg"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">


                <include layout="@layout/view_recycler" />

                <ListView
                    android:id="@+id/IndexList"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/max_padding"
                    android:layout_marginTop="@dimen/max_padding"
                    android:visibility="gone"
                    android:divider="@color/transparent"
                    android:dividerHeight="0dp"
                    android:listSelector="@color/transparent"
                    android:paddingRight="@dimen/min_padding"
                    android:scrollbars="none" />
            </RelativeLayout>

            <com.common.view.DialogTextView
                android:id="@+id/num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/middle_padding"
                android:gravity="center"
                android:textSize="@dimen/tab_text_size" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
